<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/double_color_ball_li_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="10.0dip"
        android:paddingLeft="4.0dip"
        android:paddingRight="4.0dip"
        android:paddingTop="10.0dip"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/double_color_ball_li_tv_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/double_color_ball_li_tv_date"
        android:layout_toRightOf="@id/double_color_ball_li_tv_date"
        android:paddingBottom="10.0dip"
        android:paddingLeft="4.0dip"
        android:paddingRight="4.0dip"
        android:paddingTop="10.0dip" />

    <TextView
        android:id="@+id/double_color_ball_li_tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/double_color_ball_li_tv_minus"
        android:layout_toRightOf="@id/double_color_ball_li_tv_minus"
        android:paddingBottom="10.0dip"
        android:paddingLeft="4.0dip"
        android:paddingRight="4.0dip"
        android:paddingTop="10.0dip"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/double_color_ball_li_ll_balls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/double_color_ball_li_tv_date"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/double_color_ball_li_tv_redA"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="6.0dip"
            android:paddingLeft="4.0dip"
            android:paddingRight="4.0dip"
            android:paddingTop="6.0dip" />

        <TextView
            android:id="@+id/double_color_ball_li_tv_redB"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="6.0dip"
            android:paddingLeft="4.0dip"
            android:paddingRight="4.0dip"
            android:paddingTop="6.0dip" />

        <TextView
            android:id="@+id/double_color_ball_li_tv_redC"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="6.0dip"
            android:paddingLeft="4.0dip"
            android:paddingRight="4.0dip"
            android:paddingTop="6.0dip" />

        <TextView
            android:id="@+id/double_color_ball_li_tv_redD"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="6.0dip"
            android:paddingLeft="4.0dip"
            android:paddingRight="4.0dip"
            android:paddingTop="6.0dip" />

        <TextView
            android:id="@+id/double_color_ball_li_tv_redE"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="6.0dip"
            android:paddingLeft="4.0dip"
            android:paddingRight="4.0dip"
            android:paddingTop="6.0dip" />

        <TextView
            android:id="@+id/double_color_ball_li_tv_redF"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="6.0dip"
            android:paddingLeft="4.0dip"
            android:paddingRight="4.0dip"
            android:paddingTop="6.0dip" />

        <TextView
            android:id="@+id/double_color_ball_li_tv_blue"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="6.0dip"
            android:paddingLeft="4.0dip"
            android:paddingRight="4.0dip"
            android:paddingTop="6.0dip"
            android:textColor="#0087E5"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/double_color_ball_li_tv_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/double_color_ball_li_ll_balls"
        android:paddingBottom="6.0dip"
        android:paddingLeft="4.0dip"
        android:paddingRight="4.0dip"
        android:paddingTop="6.0dip"
        android:textColor="#003253" >
    </TextView>

</RelativeLayout>