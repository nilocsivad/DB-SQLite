<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/double_color_ball_lv_double_color_balls"
        android:layout_width="match_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1" >
    </ListView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.0dip"
        android:background="#666666" />

    <LinearLayout
        android:id="@+id/double_color_ball_ll_operation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:id="@+id/double_color_ball_tv_refresh"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:focusable="true"
            android:gravity="center"
            android:paddingBottom="10.0dip"
            android:paddingTop="10.0dip"
            android:text="@string/double_color_ball_txt_refresh" />

        <View
            android:layout_width="1.0dip"
            android:layout_height="match_parent"
            android:background="#666666" />

        <TextView
            android:id="@+id/double_color_ball_tv_fetch"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:focusable="true"
            android:gravity="center"
            android:paddingBottom="10.0dip"
            android:paddingTop="10.0dip"
            android:text="@string/double_color_ball_txt_fetch" />

        <View
            android:layout_width="1.0dip"
            android:layout_height="match_parent"
            android:background="#666666" />

        <TextView
            android:id="@+id/double_color_ball_tv_fetch_all"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:focusable="true"
            android:gravity="center"
            android:paddingBottom="10.0dip"
            android:paddingTop="10.0dip"
            android:text="@string/double_color_ball_txt_fetch_all" />
    </LinearLayout>

</LinearLayout>